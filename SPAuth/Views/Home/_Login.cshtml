<script type="text/ng-template" id="/login">
    <div class="container" ng-controller="LoginCtrl">
        <div class="row">
            <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3" ng-hide="message">
                <h2>Login</h2>
                <form name="loginForm" ng-submit="login()">
                    <auto:fields fields="schema" data="user"></auto:fields>
                    <button type="submit" class="btn btn-default btn-lg btn-block" ng-class="{'btn-primary':loginForm.$valid}" tabindex="100">Login</button>
                </form>
                <p class="small text-muted gutter-top text-center">Don't have an account? <a href="/join">Register now!</a></p>
                <hr />
                <h4>Or Login With</h4>
                <button class="btn btn-default" ng-repeat="login in security.externalLogins" ng-bind="login.name" ng-click="security.loginWithExternal(login)"></button>
            </div>
            <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3" ng-show="message">
                <p class="lead" ng-bind="message"></p>
            </div>
        </div>
    </div>
</script>
